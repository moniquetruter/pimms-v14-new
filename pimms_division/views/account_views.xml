<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_filter_inherit" model="ir.ui.view">
        <field name="name">account.move.select.inherit.pimms.division</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="division_id" string="Division"/>
            </field>
        </field>
    </record>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.invoice.inherit.pimms.division</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_vendor_bill_id" position="after">
                <field name="division_id" required="1" options="{'no_create': True}" string="Division"/>
            </field>
        </field>
    </record>
</odoo>
