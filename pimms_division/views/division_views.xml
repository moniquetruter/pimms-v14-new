<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pimms_division_tree" model="ir.ui.view">
        <field name="name">pimms.division.tree</field>
        <field name="model">pimms.division</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="company_id" invisible="1"/>
                <field name="name" required="1" string="Division Name"/>
                <field name="logo" string="Logo"/>
                <field name="invoice_layout_id" domain="[('type', '=', 'qweb')]" string="Invoice Layout"/>
                <field name="statement_layout_id" domain="[('type', '=', 'qweb')]" string="Statement Layout"/>
            </tree>
        </field>
    </record>

    <record id="action_pimms_division_tree" model="ir.actions.act_window">
        <field name="name">Division</field>
        <field name="res_model">pimms.division</field>
        <field name="view_id" ref="view_pimms_division_tree"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_pimms_division"
              name="Divisions"
              parent="base.menu_users"
              action="action_pimms_division_tree"
              sequence="99"/>
</odoo>
